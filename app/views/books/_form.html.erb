<%= form_for [@category, book] do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field" hidden>
    <%= f.label :category_id %>
    <%= f.text_field :category_id, value: @category.id %>
  </div>

  <div class="field">
    <%= f.label :release_date %>
    <%= f.datetime_select :release_date %>
  </div>

  <div class="field">
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <br>
    <% if @book.image.attached? %>
      <%= image_tag @book.image, style: 'width: 200px;' %>
    <% end %>
    <br>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
